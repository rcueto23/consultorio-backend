// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  nombre    String
  apellido  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Paciente {
  id            String   @id @default(uuid()) @db.Uuid
  nombres       String
  apellidos     String
  tipoDocumento String   @map("tipo_documento")
  documento     String   @unique
  email         String?
  telefono      String?
  nacimiento    DateTime?
  sexo          String   @default("Otro")
  direccion     String?
  notas         String?
  estado        String   @default("activo")
  etiquetas     String?
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  citas         Cita[]

  @@map("pacientes")
}

model Cita {
  id          String   @id @default(uuid()) @db.Uuid
  pacienteId  String   @map("paciente_id") @db.Uuid
  fecha       DateTime
  duracion    Int      @default(60) // duración en minutos
  estado      String   @default("pendiente") // pendiente, completada, cancelada, en_curso
  motivo      String?
  notas       String?  // Para futuro: expandir a historia clínica
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  paciente    Paciente @relation(fields: [pacienteId], references: [id], onDelete: Cascade)

  @@map("citas")
  @@index([pacienteId])
  @@index([fecha])
  @@index([estado])
}
